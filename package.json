{
  "name": "photounikalizer",
  "version": "1.0.8",
  "private": true,
  "main": "electron/main.js",
  "author": "YALOKGAR <yalokgar@gmail.com>",
  "description": "PhotoUnikalizer â€“ unique and anonymize photos with smart drifts and rich fake EXIF/IPTC.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YALOKGARua/PhotoUnikalizer.git"
  },
  "homepage": "https://github.com/YALOKGARua/PhotoUnikalizer#readme",
  "bugs": {
    "url": "https://github.com/YALOKGARua/PhotoUnikalizer/issues"
  },
  "keywords": [
    "photo",
    "anonymize",
    "exif",
    "iptc",
    "metadata",
    "electron",
    "react",
    "windows"
  ],
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "vite build",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "publish": "npm run build && electron-builder --publish always",
    "release:patch": "npm version patch -m \"release: %s\" && git push",
    "release:minor": "npm version minor -m \"release: %s\" && git push",
    "release:major": "npm version major -m \"release: %s\" && git push",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "exiftool-vendored": "*",
    "electron-updater": "^6.1.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.3"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "vite": "^5.2.0",
    "wait-on": "^7.0.1"
  },
  "overrides": {
    "wrappy": "1.0.2",
    "once": {
      "wrappy": "1.0.2"
    },
    "inflight": {
      "wrappy": "1.0.2"
    }
  },
  "build": {
    "appId": "com.yalokgar.photounikalizer",
    "productName": "PhotoUnikalizer",
    "artifactName": "PhotoUnikalizer-${version}-${os}-${arch}.${ext}",
    "files": [
      "dist/**",
      "electron/**",
      "node_modules/**",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/sharp/**/*",
      "node_modules/exiftool-vendored/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "artifactName": "PhotoUnikalizer-Setup-${version}.exe"
    },
    "portable": {
      "artifactName": "PhotoUnikalizer-Portable-${version}.exe"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "YALOKGARua",
        "repo": "PhotoUnikalizer",
        "releaseType": "release",
        "draft": false,
        "prerelease": false
      }
    ]
  }
}